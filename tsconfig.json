{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./build",
    "target": "es5",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}


{
  "files": ["src/pubsub.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true
  }
}